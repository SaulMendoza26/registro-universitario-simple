<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
    version="3.0">
    <persistence-unit name="registroEstudiantil" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>com.proyects.model.Course</class>
        <class>com.proyects.model.Student</class>
        <class>com.proyects.model.Professor</class>
        <!-- Agrega aquÃ­ tus entidades -->
        <properties>
            <property name="jakarta.persistence.jdbc.driver" value="org.postgresql.Driver" />
            <property name="jakarta.persistence.jdbc.url"
                value="jdbc:postgresql://localhost:5432/mi_basedatos" />
            <property name="jakarta.persistence.jdbc.user" value="saul" />
            <property name="jakarta.persistence.jdbc.password" value="password" />
            <property name="hibernate.hbm2ddl.auto" value="update" />
            <property name="hibernate.show_sql" value="update" />
        </properties>
    </persistence-unit>
</persistence>